<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1100.0"
            xmlns="http://javafx.com/javafx/19">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="303.0" layoutY="11.0" prefHeight="70.0"
               prefWidth="540.0" text="Upload Profile Image ">
            <font>
                <Font name="Arial Black" size="45.0"/>
            </font>
        </Label>
        <VBox fx:id="imageDropInVbox" layoutX="333.0" layoutY="108.0" prefHeight="180.0" prefWidth="470.0"
              style="-fx-border-color: blue; -fx-border-width: 8;">
            <children>
                <StackPane prefHeight="150.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="instructionLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="159.0"
                               prefWidth="470.0" text="Click Here To Upload Image">
                            <font>
                                <Font name="Arial Black" size="29.0"/>
                            </font>
                        </Label>
                        <ImageView fx:id="previewImageView" fitHeight="470.0" fitWidth="470.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                    </children>
                </StackPane>
            </children>
        </VBox>
        <Button fx:id="confirmUploadButton" layoutX="850.0" layoutY="520.0" mnemonicParsing="false" prefHeight="55.0"
                prefWidth="104.0" text="Confirm">
            <font>
                <Font size="22.0"/>
            </font>
        </Button>
        <Button fx:id="resetUploadButton" layoutX="970.0" layoutY="520.0" mnemonicParsing="false" prefHeight="55.0"
                prefWidth="104.0" text="Reset">
            <font>
                <Font size="22.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
