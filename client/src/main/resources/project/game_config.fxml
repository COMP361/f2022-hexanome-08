<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" layoutX="300.0" layoutY="15.0" prefHeight="50.0" prefWidth="500.0" text="Game Configuration">
         <font>
            <Font name="Arial Black" size="35.0" />
         </font>
      </Label>
      <Label fx:id="instructionLabel" alignment="CENTER" layoutX="125.0" layoutY="106.0" prefHeight="50.0" prefWidth="850.0" text="Make Your Choice!">
         <font>
            <Font name="Arial Black" size="30.0" />
         </font>
      </Label>
      <VBox layoutX="300.0" layoutY="200.0" prefHeight="300.0" prefWidth="500.0" style="-fx-border-color: blue; -fx-border-width: 8;">
         <children>
            <Label alignment="CENTER" prefHeight="50.0" prefWidth="500.0" text="Winning Points Needed">
               <font>
                  <Font name="Arial Black" size="35.0" />
               </font>
            </Label>
            <Region prefHeight="71.0" prefWidth="484.0" />
            <HBox prefHeight="65.0" prefWidth="484.0">
               <children>
                  <Region prefHeight="65.0" prefWidth="191.0" />
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TextField fx:id="maxPointsTextField" alignment="CENTER" prefHeight="37.0" prefWidth="254.0">
                           <font>
                              <Font name="Arial Black" size="25.0" />
                           </font>
                        </TextField>
                        <Button fx:id="confirmMaxPointsButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="110.0" text="Confirm">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label fx:id="warnLabel" alignment="CENTER" prefHeight="17.0" prefWidth="483.0" textFill="RED">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
